import random as r
answers = ["Бесспорно", "Мне кажется - да", "Пока неясно, попробуй снова", "Даже не думай",
           "Предрешено", "Вероятнее всего", "Спроси позже", "Мой ответ - нет",
           "Никаких сомнений", "Хорошие перспективы", "Лучше не рассказывать", "По моим данным - нет",
           "Можешь быть уверен в этом", "Да", "Сконцентрируйся и спроси опять", "Весьма сомнительно"]


def start():
    question = input('Задай свой вопрос. Я на всё знаю ответ! ')
    print(r.choice(answers))

# Вступление
name = input('Введи имя: ')
print('Привет', f'{name}, я магический шар. Давай погадаем?')
if input('Начнём? ').lower() == 'да':
    start()
    while True:
        if input('Если хочешь ещё, введи "да", если нет, то введи "стоп" ') == 'стоп':
            print('Хорошо, буду тебя ждать,', f'{name}')
            break
        else:
            start()
